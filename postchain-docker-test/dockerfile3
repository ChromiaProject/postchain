FROM java:8
WORKDIR /
ADD postchain-base-2.4.2-jar-with-dependencies.jar postchain-base-2.4.2-jar-with-dependencies.jar
ADD configration1.xml configration1.xml
ADD common.properties common.properties
ADD config.3.properties config.3.properties
RUN /bin/sh
CMD java -jar postchain-base-2.4.2-jar-with-dependencies.jar add-blockchain --node-config config.3.properties --chain-id 0 --blockchain-rid 78967baa4768cbcef11c508326ffb13a956689fcb6dc3ba17f4b895cbb1577a3 --blockchain-config configration1.xml --force && java -jar postchain-base-2.4.2-jar-with-dependencies.jar run-node -cid 0 -i 3